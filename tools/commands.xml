<?xml version="1.0" encoding="utf-8"?>
<commands>
	<nothing>
		<help>Show logo and version</help>
		<syn>logo</syn>
		<syn>version</syn>
		<syn>v</syn>
	</nothing>
	<help>
		<help>Show tools help</help>
		<syn>h</syn>
	</help>
	<create>
		<help>Create new project in current directory</help>
		<syn>c</syn>
		<syn>new</syn>
		<syn>n</syn>
		<arg>Target (server, node, pixi, pixixml, js, neko, electron, pixielectron, monacoelectron, cc, cordova)</arg>
		<arg>Project name (create fdt too)</arg>
	</create>
	<server>
		<help>Run pony server (build, tests, proxy, watch)</help>
		<syn>s</syn>
		<syn>watch</syn>
	</server>
	<prepare>
		<help>Run prepare tools set</help>
		<syn>p</syn>
		<arg>Configure name</arg>
		<arg>Debug or release (default)</arg>
	</prepare>
	<build>
		<help>Run build tools set</help>
		<syn>b</syn>
		<arg>Configure name</arg>
		<arg>Debug or release (default)</arg>
	</build>
	<cordova>
		<help>Build for cordova</help>
		<arg>Configure name</arg>
		<arg>Debug or release (default)</arg>
	</cordova>
	<android>
		<help>Build for android cordova</help>
		<arg>Configure name</arg>
		<arg>Debug or release (default)</arg>
	</android>
	<iphone>
		<help>Build for iphone cordova</help>
		<arg>Configure name</arg>
		<arg>Debug or release (default)</arg>
	</iphone>
	<electron>
		<help>Build for electron</help>
		<arg>Configure name</arg>
		<arg>Debug or release (default)</arg>
	</electron>
	<run>
		<help>Build project and run result after</help>
		<syn>r</syn>
		<arg>Configure name</arg>
		<arg>Debug or release (default)</arg>
	</run>
	<zip>
		<help>Build project and pack result after</help>
		<syn>z</syn>
		<arg>Configure name</arg>
		<arg>Debug or release (default)</arg>
	</zip>
	<ftp>
		<help>Build project and send result after on ftp server</help>
		<syn>f</syn>
		<arg>Configure name</arg>
		<arg>Debug or release (default)</arg>
	</ftp>
	<remote>
		<help>Run commands on remote pony build server</help>
		<syn>x</syn>
		<arg>Configure name</arg>
		<arg>Debug or release</arg>
	</remote>
	<hash>
		<help>Create hashes list for files from config</help>
		<arg>Configure name</arg>
		<arg>Debug or release</arg>
	</hash>
	<unpack>
		<help>Unpack files from config archives</help>
		<arg>Configure name</arg>
		<arg>Debug or release</arg>
	</unpack>
	<haxelib>
		<help>Haxelib tools</help>
		<arg>Operation (submit, create, micro, minor, major, updateReadme, upload)</arg>
		<arg>Arguments</arg>
		<arg>...</arg>
	</haxelib>
	<lines>
		<help>Print lines count</help>
		<syn>l</syn>
	</lines>
	<chars>
		<help>Show chars in .fnt file</help>
		<arg>.fnt file</arg>
	</chars>
	<license>
		<help>Generate or put license</help>
		<arg>Create or update</arg>
		<arg>License type for create</arg>
		<arg>...</arg>
	</license>

	<comment>Visit https://github.com/AxGord/Pony/wiki/Pony-Tools for more info</comment>
</commands>